<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CryptoScreen">

    <TextView
            android:layout_width="149dp"
            android:layout_height="64dp" android:id="@+id/result_crypto"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/get_results_geo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.577" app:layout_constraintVertical_bias="0.873"
            android:layout_marginEnd="4dp" android:layout_marginRight="4dp" android:textColor="#08590C"/>
    <TextView
            android:text="Note: Only ONE checker should be marked!!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_message3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/get_result_button" app:layout_constraintHorizontal_bias="0.462"
            android:layout_marginBottom="32dp" android:textColor="#8C0F3A"/>
    <CheckBox
            android:text=".png"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox_crypto_A3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.695"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox_crypto_C3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.818"
            app:layout_constraintBottom_toBottomOf="parent" android:text=".jpeg"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.695"/>
    <CheckBox
            android:text="Non-Fungible Token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox_crypto_B3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.382"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.695"/>
    <CheckBox
            android:text="Bitcoin "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox_crypto_A2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.531" app:layout_constraintTop_toTopOf="parent"/>
    <CheckBox
            android:text="Etherium based token"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox_crypto_B2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.531"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.475"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox_crypto_C2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.875"
            android:text="USDT" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.531" app:layout_constraintTop_toTopOf="parent"/>
    <CheckBox
            android:layout_width="117dp"
            android:layout_height="52dp" android:id="@+id/checkBox_crypto_C1"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.908"
            android:text="Anonymous " app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.346"/>
    <CheckBox
            android:text="Satoshi Nakamoto"
            android:layout_width="131dp"
            android:layout_height="42dp" android:id="@+id/checkBox_crypto_B"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.349"/>
    <TextView
            android:text="3. What is an NTF?"
            android:layout_width="247dp"
            android:layout_height="49dp" android:id="@+id/crypto_question3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="208dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.459"
            app:layout_constraintTop_toTopOf="parent" android:textColor="#0C0C0C"/>
    <TextView
            android:text="2. What is ERC-20 token?"
            android:layout_width="247dp"
            android:layout_height="49dp" android:id="@+id/crypto_question2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.46" android:textColor="#090909"/>
    <ImageView
            android:layout_width="259dp"
            android:layout_height="158dp" app:srcCompat="@drawable/crypto_image" android:id="@+id/crypto_image"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.022" app:layout_constraintBottom_toTopOf="@+id/crypto_question1"/>
    <TextView
            android:text="1. Who is the inventor of Bitcoin ?"
            android:layout_width="247dp"
            android:layout_height="49dp" android:id="@+id/crypto_question1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintVertical_bias="0.272" android:textColor="#040303"/>
    <CheckBox
            android:text="Vitalik Buterin"
            android:layout_width="114dp"
            android:layout_height="48dp" android:id="@+id/checkBox_crypto_A"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.344"/>
    <Button
            android:text="GET RESULTS"
            android:layout_width="158dp"
            android:layout_height="64dp" android:id="@+id/button_get_result_crypto"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.875"
            app:backgroundTint="#BA1B98"/>
</androidx.constraintlayout.widget.ConstraintLayout>