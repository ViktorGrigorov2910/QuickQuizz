<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GeographyScreen">

    <CheckBox
            android:text="Four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question_2_A_geo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.177" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/geography_question_1" app:layout_constraintVertical_bias="0.226"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <CheckBox
            android:text="Ukraine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question_3_A_geo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.082" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/geography_question_1" app:layout_constraintVertical_bias="0.555"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <CheckBox
            android:text="France"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question_3_B_geo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.403" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/geography_question_1" app:layout_constraintVertical_bias="0.555"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <CheckBox
            android:text="Spain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question_3_C_geo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.736" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/geography_question_1" app:layout_constraintVertical_bias="0.555"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <CheckBox
            android:text="Infinite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question_2_B_geo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.543" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/geography_question_1" app:layout_constraintVertical_bias="0.226"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <CheckBox
            android:text="Moscow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question_1_C_geo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.778" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="18dp" app:layout_constraintBottom_toTopOf="@+id/geography_question_2"
            app:layout_constraintTop_toBottomOf="@+id/geography_question_1" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Note: Only ONE checker should be marked!!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_message2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/get_result_button" app:layout_constraintHorizontal_bias="0.462"
            android:layout_marginBottom="32dp" android:textColor="#8C0F3A"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/geography_image" android:id="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.013"/>
    <TextView
            android:text="1. What is the capital of Bulgaria?"
            android:layout_width="322dp"
            android:layout_height="52dp" android:id="@+id/geography_question_1"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.314" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.347"/>
    <TextView
            android:text="2. How many directions are there?"
            android:layout_width="310dp"
            android:layout_height="52dp" android:id="@+id/geography_question_2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.287" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.521"/>
    <TextView
            android:text="3. Which is the biggest country in Europe?"
            android:layout_width="320dp"
            android:layout_height="53dp" android:id="@+id/geography_question_3"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/geography_question_2"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.125" app:layout_constraintHorizontal_bias="0.318"/>
    <CheckBox
            android:text="Sofia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question_1_A_geo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.083" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="18dp" app:layout_constraintBottom_toTopOf="@+id/geography_question_2"
            app:layout_constraintTop_toBottomOf="@+id/geography_question_1" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="GET RESULTS"
            android:layout_width="150dp"
            android:layout_height="57dp" android:id="@+id/get_results_geo"
            app:layout_constraintTop_toBottomOf="@+id/question_3_A_geo"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="28dp" android:layout_marginStart="28dp"
            app:layout_constraintVertical_bias="0.187"/>
    <TextView
            android:layout_width="143dp"
            android:layout_height="55dp" android:id="@+id/result_geography"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/get_results_geo"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.577" app:layout_constraintVertical_bias="0.865"
            android:textColor="#08590C"/>
    <CheckBox
            android:text="London"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/question_1_B_geo"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.407"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.395"/>
</androidx.constraintlayout.widget.ConstraintLayout>