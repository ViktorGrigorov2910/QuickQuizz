<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:rotationX="-360" android:rotationY="-360" android:rotation="-360"
        android:id="@+id/HomeScreen">
    <Button
            android:text="INFO"
            android:layout_width="300dp"
            android:layout_height="51dp" android:id="@+id/infoButton"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:backgroundTint="#FF5722"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504" app:layout_constraintVertical_bias="0.895"
    />
    <Button
            android:text="Geography"
            android:layout_width="300dp"
            android:layout_height="51dp" android:id="@+id/geographyButton"
            android:layout_marginTop="368dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:backgroundTint="#4CAF50"
            app:layout_constraintBottom_toTopOf="@+id/cryptoButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504" app:layout_constraintVertical_bias="0.717"/>
    <TextView
            android:layout_width="413dp"
            android:layout_height="81dp"
            android:text="     SECTIONS:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.313"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:id="@+id/textView"
            android:textStyle="bold" android:textColor="#3F51B5"/>
    <Button
            android:text="CRYPTO"
            android:layout_width="300dp"
            android:layout_height="51dp" android:id="@+id/cryptoButton"
            android:layout_marginTop="448dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:backgroundTint="#E91E63" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/infoButton" app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintVertical_bias="0.768"/>
    <Button
            android:text="Math"
            android:layout_width="300dp"
            android:layout_height="51dp" android:id="@+id/mathButton"
            android:layout_marginTop="284dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:backgroundTint="#673AB7"
            app:iconTint="#673AB7" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/geographyButton" app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintVertical_bias="0.747"/>
    <ImageView
            android:layout_width="323dp"
            android:layout_height="153dp" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="0.0" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/take_the_quiz"/>

</androidx.constraintlayout.widget.ConstraintLayout>